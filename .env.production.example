# ============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env.production and fill in your values
# NEVER commit .env.production to git!

# ============================================
# Node Environment
# ============================================
NODE_ENV=production
LOG_LEVEL=info

# ============================================
# Telegram Bot (REQUIRED)
# ============================================
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# ============================================
# Solana RPC (REQUIRED - Use Helius in production!)
# ============================================
# DO NOT use public RPC in production - get Helius API key
HELIUS_API_KEY=your_helius_api_key
SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=your_helius_api_key
SOLANA_WS_URL=wss://mainnet.helius-rpc.com/?api-key=your_helius_api_key

# ============================================
# Database - Supabase (REQUIRED)
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# Redis Cache (REQUIRED for production)
# ============================================
REDIS_URL=redis://localhost:6379
# Or for Redis Cloud:
# REDIS_URL=redis://:password@redis-host:port

# ============================================
# External APIs (Optional but recommended)
# ============================================
# RugCheck
RUGCHECK_API_KEY=your_rugcheck_key

# DexScreener
DEXSCREENER_API_KEY=your_dexscreener_key

# GMGN
GMGN_API_KEY=your_gmgn_key

# Anthropic Claude (for AI explanations)
ANTHROPIC_API_KEY=your_anthropic_key

# Twitter API (for follower counts)
TWITTER_BEARER_TOKEN=your_twitter_token

# WHOIS API (for domain checks)
WHOIS_API_KEY=your_whois_key

# ============================================
# Monitoring & Alerts (Optional)
# ============================================
# Discord Webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...
DISCORD_WEBHOOK_USERNAME=Solana Bot
DISCORD_WEBHOOK_AVATAR_URL=

# Email Alerts (SendGrid)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=alerts@yourdomain.com
SENDGRID_TO_EMAIL=your@email.com

# Email Alerts (Resend - alternative)
RESEND_API_KEY=
RESEND_FROM_EMAIL=alerts@yourdomain.com
RESEND_TO_EMAIL=your@email.com

# Email Provider Selection
EMAIL_PROVIDER=sendgrid

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# ============================================
# Alert Filters & Thresholds
# ============================================
MIN_LIQUIDITY_USD=1000
MIN_RISK_SCORE=0
MAX_TOP_HOLDER_PERCENT=80
MIN_HOLDERS=10

# ============================================
# Monitoring Intervals (milliseconds)
# ============================================
RAYDIUM_ENABLED=true
PUMPFUN_ENABLED=true
JUPITER_ENABLED=true

JUPITER_POLL_INTERVAL=30000
PUMPFUN_POLL_INTERVAL=10000
RAYDIUM_POLL_INTERVAL=15000

# Feature toggles
WATCHLIST_ENABLED=true
DISCOVERY_ENABLED=true
WALLET_MONITOR_ENABLED=true

# ============================================
# Rate Limiting
# ============================================
MAX_REQUESTS_PER_MINUTE=60

# ============================================
# FlareSolverr (Cloudflare bypass)
# ============================================
FLARESOLVERR_URL=http://localhost:8191/v1

# ============================================
# Web Dashboard Configuration
# ============================================
VITE_API_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000
VITE_SUPABASE_URL=${SUPABASE_URL}
VITE_SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}

# ============================================
# Security & Performance
# ============================================
# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=your_super_secret_jwt_key_here

# CORS Origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# API Rate Limit
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Production-Specific Settings
# ============================================
# Memory limits
NODE_OPTIONS="--max-old-space-size=1024"

# Process management
PM2_HOME=/var/lib/pm2
PM2_LOG_DIR=/var/log/pm2

# Health check interval
HEALTH_CHECK_INTERVAL=30000

# Graceful shutdown timeout
SHUTDOWN_TIMEOUT=5000

# ============================================
# Backup & Recovery
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 3 * * *" # 3 AM daily
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
