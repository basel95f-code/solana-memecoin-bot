{
  "name": "solana-memecoin-bot-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:bot": "turbo dev --filter=@memecoin/bot",
    "dev:dashboard": "turbo dev --filter=@memecoin/dashboard",
    "start": "turbo start",
    "start:bot": "turbo start --filter=@memecoin/bot",
    "lint": "turbo lint",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules",
    "db:migrate": "cd supabase && npx supabase db push",
    "db:types": "cd supabase && npx supabase gen types typescript --local > ../packages/shared/src/types/supabase.ts"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.6.2"
  },
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
