# ============================================
# SOLANA MEMECOIN BOT - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED: Telegram Bot
# ============================================
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=

# Your Telegram user ID or group ID for alerts
# Get from @userinfobot on Telegram
TELEGRAM_CHAT_ID=

# ============================================
# Multi-Channel Alert Delivery (Optional)
# ============================================

# Discord Webhook (optional)
# Create webhook in Discord channel settings
DISCORD_WEBHOOK_URL=
DISCORD_WEBHOOK_USERNAME=Solana Bot
DISCORD_WEBHOOK_AVATAR_URL=

# Email Alerts (optional - choose SendGrid OR Resend)
# SendGrid
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=alerts@yourdomain.com
SENDGRID_FROM_NAME=Solana Alert Bot
SENDGRID_TO_EMAIL=your@email.com

# OR Resend (alternative to SendGrid)
RESEND_API_KEY=
RESEND_FROM_EMAIL=alerts@yourdomain.com
RESEND_FROM_NAME=Solana Alert Bot
RESEND_TO_EMAIL=your@email.com

# Email Provider Selection (sendgrid or resend)
EMAIL_PROVIDER=sendgrid

# WebSocket Server for Frontend (optional)
WEBSOCKET_PORT=8080
WEBSOCKET_PATH=/alerts

# SMS Alerts via Twilio (optional - future feature)
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_FROM_NUMBER=
# TWILIO_TO_NUMBER=

# ============================================
# REQUIRED: Solana RPC
# ============================================
# Public RPC (rate limited, for testing only)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# WebSocket URL for real-time monitoring
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com

# ============================================
# RECOMMENDED: Helius RPC (Better Performance)
# ============================================
# Get free API key from https://helius.dev
# Much faster and more reliable than public RPC
HELIUS_API_KEY=
HELIUS_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY

# ============================================
# OPTIONAL: External APIs
# ============================================
# RugCheck API Key (optional - get from rugcheck.xyz)
RUGCHECK_API_KEY=

# DexScreener API Key (optional - get from dexscreener.com)
DEXSCREENER_API_KEY=

# GMGN API Key (optional - get from gmgn.ai)
GMGN_API_KEY=

# Anthropic API Key (for Claude AI explanations)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Twitter API Bearer Token (for follower counts)
# Get from: https://developer.twitter.com/
TWITTER_BEARER_TOKEN=

# WHOIS API Key (for domain age checks)
# Get from: https://whoisfreaks.com/
WHOIS_API_KEY=

# ============================================
# ALERT FILTERS
# ============================================
# Minimum liquidity in USD to trigger alert
MIN_LIQUIDITY_USD=1000

# Minimum risk score to send alert (0-100, higher = safer)
MIN_RISK_SCORE=0

# Maximum holder concentration for top 10 holders (%)
MAX_TOP_HOLDER_PERCENT=80

# Minimum number of holders
MIN_HOLDERS=10

# ============================================
# MONITORING INTERVALS & FEATURE TOGGLES
# ============================================
# Enable/disable specific monitors
RAYDIUM_ENABLED=true
PUMPFUN_ENABLED=true
JUPITER_ENABLED=true
METEORA_ENABLED=true
ORCA_ENABLED=true

# Jupiter token list poll interval (ms)
JUPITER_POLL_INTERVAL=30000

# Pump.fun poll interval (ms)
PUMPFUN_POLL_INTERVAL=10000

# Raydium poll interval (ms)
RAYDIUM_POLL_INTERVAL=15000

# Meteora DLMM poll interval (ms)
METEORA_POLL_INTERVAL=15000

# Orca Whirlpool poll interval (ms)
ORCA_POLL_INTERVAL=15000

# Enable/disable features
WATCHLIST_ENABLED=true
DISCOVERY_ENABLED=true
WALLET_MONITOR_ENABLED=true

# ============================================
# RATE LIMITING
# ============================================
# Max requests per minute to external APIs
MAX_REQUESTS_PER_MINUTE=60

# ============================================
# LOGGING
# ============================================
# Log level: DEBUG, INFO, WARN, ERROR, SILENT
LOG_LEVEL=INFO

# ============================================
# DATABASE
# ============================================
# Database type: 'sqlite' or 'supabase'
DATABASE_TYPE=supabase

# SQLite Configuration (legacy)
DATABASE_PATH=data/bot.db

# Supabase Configuration (recommended)
# Get from: https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================
# FLARESOLVERR (Cloudflare Bypass)
# ============================================
# URL for FlareSolverr proxy (bypasses Cloudflare protection)
# Run FlareSolverr with Docker:
#   docker run -d --name flaresolverr -p 8191:8191 ghcr.io/flaresolverr/flaresolverr:latest
# Or standalone: https://github.com/FlareSolverr/FlareSolverr
FLARESOLVERR_URL=http://localhost:8191/v1

# ============================================
# ADVANCED MONITORING (Optional)
# ============================================
# Volume spike multiplier (e.g., 5 = 5x volume spike triggers alert)
VOLUME_SPIKE_MULTIPLIER=5

# Whale movement threshold (% of supply)
WHALE_MOVEMENT_THRESHOLD=3

# Liquidity drain threshold (% removed)
LIQUIDITY_DRAIN_THRESHOLD=30

# ============================================
# NODE ENVIRONMENT
# ============================================
NODE_ENV=development
